  },
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[deployment().location]"
    },
    "sharedSqlResourceGroup": {
      "type": "string",
      "defaultValue": "shared-sql"
    },
    "sharedWebResourceGroup": {
      "type": "string",
      "defaultValue": "shared-web"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "name": "widgetSqlDeployment",
      "resourceGroup": "[parameters('sharedSqlResourceGroup')]",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "metadata": {
            "_generator": {
              "name": "bicep",
              "version": "0.4.1318.3566",
              "templateHash": "15207346888769923312"
            }
          },
          "parameters": {
            "serverName": {
              "type": "string",
              "defaultValue": "[format('sql-{0}', uniqueString(resourceGroup().id))]"
            },
            "location": {
              "type": "string",
              "defaultValue": "[resourceGroup().location]"
            }
          },
          "resources": [
            {
              "type": "Microsoft.Sql/servers/databases",
              "apiVersion": "2021-05-01-preview",
              "name": "[format('{0}/widgets', parameters('serverName'))]",
              "location": "[parameters('location')]"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "name": "webDeployment",
      "resourceGroup": "[parameters('sharedWebResourceGroup')]",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "metadata": {
            "_generator": {
              "name": "bicep",
              "version": "0.4.1318.3566",
              "templateHash": "2457624001648161704"
            }
          },
          "parameters": {
            "appServicePlanName": {
              "type": "string",
              "defaultValue": "shared-app-service"
            },
            "widgetWebSiteName": {
              "type": "string",
              "defaultValue": "[format('widget-{0}', uniqueString(resourceGroup().id))]"
            },
            "location": {
              "type": "string",
              "defaultValue": "[resourceGroup().location]"
            }
          },
          "resources": [
            {
              "type": "Microsoft.Web/sites",
              "apiVersion": "2021-02-01",
              "name": "[parameters('widgetWebSiteName')]",
              "location": "[parameters('location')]",
              "tags": {
                "[format('hidden-related:{0}', extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, 'shared-web'), 'Microsoft.Web/serverfarms', parameters('appServicePlanName')))]": "Resource"
              },
              "properties": {
                "serverFarmId": "[extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, 'shared-web'), 'Microsoft.Web/serverfarms', parameters('appServicePlanName'))]"
              }
            }
          ]
        }
      }
    }
  ]
}